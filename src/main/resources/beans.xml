<?xml version = "1.0" encoding = "UTF-8"?>
<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
  http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- Definition for movie bean -->
    <bean id = "movie" class = "com.stackroute.domain.Movie" autowire="byName">
    </bean>
    <bean id = "actor" class="com.stackroute.domain.Actor">
        <property name="name" value="Aamir"/>
        <property name="gender" value="Male"/>
        <property name="age" value="50"/>
    </bean>

    <bean id = "movie1" class = "com.stackroute.domain.Movie">
        <constructor-arg name="actor" ref="actor1"/>
    </bean>
    <bean id = "actor1" class="com.stackroute.domain.Actor">
        <property name="name" value="Shahrukh"/>
        <property name="gender" value="Male"/>
        <property name="age" value="52"/>
    </bean>

</beans>